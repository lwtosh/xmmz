.nav {
    height:92rpx;
    width: 100%;
    line-height: 76rpx;
    background: #000;
    font-size: 16px;
    position: fixed;
    justify-content: space-around;
    display: flex;
    top: 0;
    z-index: 99;
}
.nav-item {
    max-width: 25%;
    color: #B3B3B3;
    text-align: center;
    font-size: 30rpx;
}
.nav-item.active{
    color: #FDB34D;
    position: relative;
}
.nav-item.active:after {
  content: "";
  display: block;
  height: 10rpx;
  width: 58rpx;
  background:  url(data:image/png;base64,) no-repeat;
  background-size: 100% 100%;
  position: absolute;
  bottom: 15rpx;
  left: 50%rpx;
  margin-left: 24rpx;
  border-radius: 16rpx;
}
