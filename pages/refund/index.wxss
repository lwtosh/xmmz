page{
  background: #f5f5f5
}
.listUl-li {
  padding: 30rpx;
  background: #fff;
  margin-bottom: 10px;
}
.cont {
  display: flex;
  /* border-bottom: 1px solid #f5f5f5; */
  padding-bottom: 0.1rem;
}
.shopImg {
  width:198rpx;
height:180rpx;

  margin-right: 20rpx;
}

.shopImg image {
  width: 100%;
  height: 100%;
}

.cont-index {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
  width: 80%;
}

.h4 {
  font-size:28rpx;
  color: #404040;
  font-weight: 400;
  line-height: 1.3;
  margin-top: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.x {
  position: absolute;
  left: 5px;
  top: 1.15rem;
  color: #bfbfbf;
  font-size: 0.3rem;
}

.cash {
  font-size: 0.3rem;
  color: #999;
}

.price {
  color: #ef0f0f;
  font-size: 38rpx;
  font-weight: bold;
  margin-top: 1rem;
}
.guige{
  color: #808080;
  font-size: 24rpx;
  margin-top: 12rpx;
}
.yen {
  font-weight: 400;
  font-size: 22rpx;
}

.fu {
  font-weight: 400;
  font-size: 0.3rem;
  color: #404040;
}
.box1{
  padding: 0 30rpx;
}
.box1-title{
  text-align: center;
  font-size: 24rpx;
  line-height: 80rpx;
}
.btn{
  width: 100%;
  position: fixed;
  bottom: 0;
  height:98rpx;
  line-height: 98rpx;
  color: #fff;
  font-size: 28rpx;
  background:#000;
  text-align: center;
}
.desc{
  padding: 30rpx;
  background: #fff;
  font-size: 26rpx;
}
.textarea{
  margin-top: 10rpx;
  width:100%;
  min-height:80rpx;

}