.container {
  width: 100%;
  background-color: #f2f2f2;
}

.status-box {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}

.status-box .status-label {
  width: 150rpx;
  height: 100%;
  text-align: center;
  font-size: 28rpx;
  color: #353535;
  box-sizing: border-box;
  position: relative;
}

.status-box .status-label.active {
  color: #e64340;
  border-bottom: 6rpx solid #e64340;
}

.status-box .status-label .red-dot {
  width: 16rpx;
  height: 16rpx;
  position: absolute;
  left: 116rpx;
  top: 23rpx;
  background-color: #f43530;
  border-radius: 50%;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.no-order {
  width: 100%;
  position: absolute;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  text-align: center;
  padding-top: 203rpx;
  background-color: #f2f2f2;
}

.no-order-img {
  width: 78%;
  height: 33%;
  margin-bottom: 31rpx;
}

.no-order .text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.list {
  background: #f5f5f5
}

.listUl-li {
  padding: 30rpx 30rpx 0 30rpx;
  background: #fff;
  margin-bottom: 10px;
}

.order {
  margin-bottom: 15rpx;
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
}

.number {
  color: #999;
}

.order-text {
  color: #EF8D06;
  font-size: 24rpx;
}

.cont {
  display: flex;
  border-bottom: 1px solid #f5f5f5;
  padding-bottom: 0.1rem;
}

.shopImg {
  width:220rpx;
height:180rpx;

  margin-right: 20rpx;
}

.shopImg image {
  width: 100%;
  height: 100%;
}

.cont-index {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
  width: 80%;
}

.h4 {
  font-size:28rpx;
  color: #404040;
  font-weight: 400;
  line-height: 1.3;
  margin-top: 10rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.x {
  position: absolute;
  left: 5px;
  top: 1.15rem;
  color: #bfbfbf;
  font-size: 0.3rem;
}

.cash {
  font-size: 0.3rem;
  color: #999;
}

.price {
  color: #ef0f0f;
  font-size: 38rpx;
  font-weight: bold;
  margin-top: 1rem;
}
.guige{
  color: #808080;
  font-size: 24rpx;
  margin-top: 12rpx;
}
.yen {
  font-weight: 400;
  font-size: 22rpx;
}

.fu {
  font-weight: 400;
  font-size: 0.3rem;
  color: #404040;
}

.foot {
  height: 98rpx;
  line-height: 98rpx;
  display: flex;
  justify-content: space-between;
}

.time,.van-count-down {
  font-size: 24rpx !important;
  line-height: 98rpx !important;
  color: #808080 !important;
}

.time1 {
  padding: 0.3rem 0;
  display: flex;
}
.tui{
  font-size: 24rpx;
  color: #404040;
}
.scroll-view-x .scroll-view-item{
  margin: 0 48rpx
}
