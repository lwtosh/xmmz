page {
  background: #f5f5f5;
}
.nav{
  line-height: 98rpx;
  background: #000;
  padding: 0 20rpx;
  display: flex;
  position: fixed;
  z-index: 99;
  top: 0;
  width: 95%;
  font-size: 26rpx;
  justify-content: space-between;
}
.nav-1{
  color: #fff
}
.nav-2{
  color: #FEDD98;
}
.moreDoing{
  color: #999;
  font-size: 26rpx;
  text-align: center;
  line-height: 2.5
}
.container {
  padding: 30rpx;
  margin-top: 78rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

/*整体列表*/

.carts-list {
  display: flex;
  flex-direction: column;
}

.carts-item {
  display: flex;
  background: #fff;
  width: 100%;
  margin-bottom: 10rpx;
  padding: 20rpx 20rpx;
  position: relative
}
.arr{
  vertical-align: -2rpx;
  float: right;
}
/*左部图片*/

.carts-image {
  width: 216rpx;
  height: 216rpx;
}

/*右部描述*/

.carts-text {
  min-width:60%;
  max-width:70%;
  display: flex;
  padding-left:20rpx; 
  flex-direction: column;
  justify-content: space-between;
}

/*右上部分标题*/

.carts-title {
  margin: 10rpx;
  font-size: 30rpx;
  font-size: 27rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.carts-guige{
  width: 75%;
  padding: 10rpx;
  font-size: 22rpx;
  margin-top: 20rpx;
  color: #808080;
}

/*右下部分价格与数量*/

.carts-subtitle {
  font-size: 25rpx;
  color: darkgray;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  
}

.data {
  right: 10rpx;
  position: absolute;
  bottom: 20rpx;
}
.data image{
  width:94rpx;
  height: 94rpx;
}
/*价格*/
.carts-price {
  color: #ef0f0f;
  font-size: 38rpx;
   line-height: 94rpx;
}

.carts-list icon {
  margin-right: 20rpx;
}

.carts-footer {
  width: 100%;
  height: 98rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #000;
  position: fixed;
  bottom: 0;
  color: #fff;
  line-height: 98rpx;
  border-top: 1px #eee solid;
}

.carts-footer icon {
  margin-left: 20rpx;
  vertical-align: -9rpx;
}
.carts-footer .iconcircle{
  width: 40rpx;
  height: 40rpx;
   margin-left: 20rpx;
  vertical-align: -9rpx;
}
.carts-list .iconcircle{
  width: 40rpx;
  height: 40rpx;
   margin-right: 20rpx;
  /* margin-left: 20rpx; */
}
.line {
  font-size: 22rpx;
  color: #808080;
  text-decoration: line-through;
}

.carts-footer text {
  font-size: 26rpx;
  margin-left: 8rpx;
  line-height: 10rpx;
}
.bindtotal{
  display: flex;
}
.total {
  font-size: 26rpx;
  margin-right: 15rpx;
}

.carts-footer .button {
  text-align: center;
  width: 240rpx;
  background: linear-gradient(-90deg, rgba(254, 221, 153, 1) 0%, rgba(245, 193, 100, 1) 100%);
  color: #404040;
  font-size: 30rpx;
  border-radius: 0;
  border: 0;
}
