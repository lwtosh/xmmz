  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.7);
   position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
.popup2{
  width: 94%;
  position: fixed;
  bottom: 0;
  height: 586rpx;
  padding: 0 25rpx;
  z-index: 999;
  background: #fff;
  border-top-right-radius: 25rpx;
  border-top-left-radius: 22rpx;
}
.goods{
  width: 100%;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #f5f5f5;
  padding-bottom: 25rpx;
}
.goodsView{
  display: flex;
}
.goods image{
  width: 168rpx;
  height: 168rpx;
  margin-top: -40rpx;
}
.goods-left{
  margin-top: 40rpx;
  margin-left: 30rpx;
}
.active{
  background: #FDE8E8;
  border: 1px solid #EF0F0F;
}
.cross{
  font-size: 44rpx;
  text-align: right;
}
.sel{
  font-size: 24rpx;
  margin-top:5rpx;
}
.goodsSele{
  padding: 32rpx 0;
  border-bottom: 1px solid #f5f5f5;
}
.goodsSele-name{
  font-size: 26rpx;
  margin-bottom: 20rpx;
}
.goodsSele-index{
  display: flex;
}
.tag{
  padding: 0 15rpx;
  background: #f5f5f5;
  color: #404040;
  font-size: 24rpx;
  line-height: 60rpx;
  margin-right: 30rpx;
}
.qunren{
  width: 100%;
  position: absolute;
  bottom: 0;
  background: #000;
  color: #fff;
  font-size: 28rpx;
  line-height: 98rpx;
  text-align: center;
  z-index: 9999;
}
.goods-num{
  padding: 25rpx 0;
}
.stepper{
  float: right;
  margin-top: -40rpx;
}