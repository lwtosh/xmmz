page{
  background: #f5f5f5
}
.list {
  background: #fff;
}

.li {
  padding:30rpx;
  display: flex;
  border-bottom: 1px solid #f5f5f5;
  justify-content: space-between;
}

.left {
  /* width: 80%; */
}

.user {
  font-size: 30rpx;
  margin-bottom: 0.2rem;
}

.address {
  font-size: 28rpx;
  color: #999;
}

.address  text {
  display: inline-block;
  width: 85rpx;
  line-height: 1.4;
  text-align: center;
  color: #fff;
  font-size:26rpx;
  background:linear-gradient(-20deg,rgba(254,221,153,1) 0%,rgba(245,193,100,1) 100%);
  border-radius: 15px;
  margin-right: 5px;
}

.moren {
  display: flex;
  justify-content: space-between;
  margin-top: 0.25rem;
}

.btn {
  display: inline-block;
  width: 1.47rem;
  line-height: 0.6rem;
  font-size: 0.32rem;
  color: #737373;
  border-radius: 5px;
  border: 1px solid #999;
  text-align: center;
  margin-left: 10px;
}

.right {
  width: 0.53rem;
  height: 0.53rem;
  margin-top: 15px;
}

img {
  width: 100%;
  height: 100%;
}

.new {
  height: 98rpx;
  line-height: 98rpx;
  width: 100%;
  text-align: center;
  color: #fff;
  background: #000;
  font-size: 30rpx;
  position: fixed;
  bottom: 0;
}
.box{
  width: 430rpx;
  display: flex;
  justify-content: space-around;
  text-align: center;
  height: 100%;
}
