/* 联系人 */

.contact {
  position: relative;
  display: flex;
  box-sizing: border-box;
  width: 100%;
  padding: 36rpx 24rpx;
  overflow: hidden;
  color: #404040;
  font-size: 26rpx;
  line-height: 24px;
  background-color: #fff;
}

.contactVal {
  position: relative;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #999;
  flex: 1;
  font-size: 26rpx;
  vertical-align: middle;
}

.icon-lo {
  min-width: 1em;
  height: 24px;
  font-size: 60rpx;
  line-height: 24px;
  margin-right: 5px;
  color: #fdda93;
  margin-top: 10rpx;
}

.arr {
  color: #999;
  font-size: 16px;
}

.contact::before {
  content: '';
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  height: 3px;
  width: 100%;
  margin: auto;
  background: repeating-linear-gradient(-45deg, #f8cb78 0, #f8cb78 20%, transparent 0, transparent 25%, #f8cb78 0, #f8cb78 45%, transparent 0, transparent 50%);
  background: -webkit-repeating-linear-gradient(-45deg, #f8cb78 0, #f8cb78 20%, transparent 0, transparent 25%, #f8cb78 0, #f8cb78 45%, transparent 0, transparent 50%);
  background-size: 240rpx;
}

/* 商品 */

.container {
  padding: 20rpx;
  /* margin-top: 78rpx; */background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

/*整体列表*/

.carts-list {
  display: flex;
  flex-direction: column;
}

.carts-item {
  display: flex;
  width: 100%;
  padding: 10rpx 0;
  border-bottom:1px solid #f5f5f5;
}
.carts-item:last-child{
  border-bottom:none;
}
.arr {
  vertical-align: -2rpx;
  float: right;
}

/*左部图片*/

.carts-image {
  width: 216rpx;
  height: 216rpx;
}

/*右部描述*/

.carts-text {
  min-width: 60%;
  max-width: 70%;
  display: flex;
  padding-left: 20rpx;
  flex-direction: column;
  justify-content: space-between;
}

/*右上部分标题*/

.carts-title {
  margin: 10rpx;
  font-size: 30rpx;
  font-size: 27rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.carts-guige {
  width: 75%;
  padding: 10rpx;
  font-size: 22rpx;
  margin-top: 10rpx;
  color: #808080;
}
.carts-subtitle {
  font-size: 25rpx;
  color: darkgray;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.carts-price {
  color: #ef0f0f;
  font-size: 38rpx;
  line-height: 94rpx;
}
.carts-list icon {
  margin-right: 20rpx;
}
.carts-footer {
  width: 100%;
  height: 98rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #000;
  position: fixed;
  bottom: 0;
  color: #fff;
  line-height: 98rpx;
  border-top: 1px #eee solid;
}
.carts-footer icon {
  margin-left: 20rpx;
  vertical-align: -9rpx;
}
.carts-footer .iconcircle {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  vertical-align: -9rpx;
}
.carts-list .iconcircle {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.line {
  font-size: 22rpx;
  color: #808080;
  text-decoration: line-through;
}
.carts-footer text {
  font-size: 26rpx;
  margin-left: 8rpx;
  line-height: 10rpx;
}
.bindtotal {
  display: flex;
}
.total {
  font-size: 26rpx;
  margin-right: 15rpx;
}
.carts-footer .button {
  text-align: center;
  width: 240rpx;
  background: linear-gradient(-90deg, rgba(254, 221, 153, 1) 0%, rgba(245, 193, 100, 1) 100%);
  color: #404040;
  font-size: 30rpx;
  border-radius: 0;
  border: 0;
}
